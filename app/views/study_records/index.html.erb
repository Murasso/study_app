<style>
.scrolling-wrapper {
  overflow-y: scroll;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card {
  transition: transform 0.5s;
  width: 60%;
  height: 50%;
  margin: 20px;
  background-color: white;
  border: 1px solid black;
}

.card-body {
  text-align: center;
}

.card:hover {
  transform: scale(1.1);
  transform-origin: center;
}

</style>
<div class="scrolling-wrapper" id="post-bg">
  <% @study_records.each do |study_record| %>
    <div class="card text-center" style="max-width: 30rem;">
      <div class="card-body">
        <%= link_to image_tag(study_record.user.get_profile_image(300,300), class: "media-object", style: "width:60px"), user_path(study_record.user.id) %>
        <div class="media-body" style="padding-top: 10px;">
          <h4 class="media-heading"><%= link_to study_record.title, study_record_path(study_record.id)%></h4>
          <p><%= study_record.body %></p>
          <p><small><%= study_record.num_of_session %> sessions</small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

